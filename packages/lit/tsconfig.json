{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "es",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

