{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "es",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "jsx": "preserve",
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

